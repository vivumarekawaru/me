#include <stdio.h>
int sorter(int b){
    int a;
    int c=0;
    int p_b=0;
    int x;
    
    for (int i=1;b>0;i*=10,b/=10){
        a=b%10;
        if (a>c){
            p_b=p_b*10+a;
            x=1;
        }
        else if (a<c){
            p_b=p_b+a*i;
            x=0;
        }
        else {
            if (x==1)
                p_b=p_b*10+a;
            else 
                p_b=p_b+a*i;
        }
        c=a;
    }
    return p_b;
}

int main() {
    int a,b,psudo_a;
    printf("no.:");
    scanf("%d",&a);
    b=a;
    psudo_a=b;
    while (1){
        b=sorter(b);
        printf("%d\n",b);
        if (psudo_a==b){
            break;
        }
        psudo_a=b;
    }
    printf("%d",b);
    return 0;
}
